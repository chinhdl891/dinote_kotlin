<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="motion"
            type="com.bzk.dinoteslite.model.Motion" />
        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/margin_view_to_view_small"
        android:padding="@dimen/padding_text"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imv_item_motion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            setImageResource="@{motion.imgMotion}"
            android:src="@drawable/ic_motion_item_cool" />

        <TextView
            android:gravity="center"
            android:layout_marginTop="@dimen/padding_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{motion.contentMotion}"
            android:hint="@string/happy" />

    </LinearLayout>
</layout>