<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="search"
            type="com.bzk.dinoteslite.model.HistorySearch" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/conner_view">

        <TextView
            android:id="@+id/tv_item_search_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:paddingStart="@dimen/margin_view_to_view_small"
            android:paddingEnd="@dimen/margin_view_to_view_small"
            android:singleLine="true"
            android:text="@{search.content}"
            android:textColor="@color/text_color" />

    </LinearLayout>
</layout>